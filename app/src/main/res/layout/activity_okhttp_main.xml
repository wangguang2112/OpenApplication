<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.guang.wang.openapplication.okhttp.OkhttpMainActivity">
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="2"
              android:inputType="textUri"
              android:id="@+id/urltext"
              android:hint="address"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="GO"
            android:layout_below="@+id/urltext"
            android:onClick="downclick"/>
    <TextView android:layout_width="match_parent"
              android:layout_below="@id/urltext"
              android:id="@+id/timer"
              android:text="123"
              android:textSize="16dp"
              android:gravity="center"
              android:layout_marginTop="50dp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text=""
              android:id="@+id/ok_result_text" android:layout_below="@id/timer" android:layout_marginTop="60dp"/>
</RelativeLayout>
