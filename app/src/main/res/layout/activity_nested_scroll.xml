<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.guang.wang.openapplication.scroll.NestedScrollActivity">
    <com.guang.wang.openapplication.scroll.nestedscroller.NestedParentView android:layout_width="200dp"
                                                                           android:layout_centerInParent="true"
                                                                           android:background="@color/colorAccent"
                                                                           android:layout_height="200dp">
        <com.guang.wang.openapplication.scroll.nestedscroller.NestedChildView android:layout_width="100dp"
                                                                              android:layout_gravity="center"
                                                                              android:background="@color/colorPrimaryDark"
                                                                              android:layout_height="100dp"/>
    </com.guang.wang.openapplication.scroll.nestedscroller.NestedParentView>
</RelativeLayout>
